{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "forin": false,
    "max-classes-per-file": [false],
    "no-console": false,
    "interface-name": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "**/logic/rest/**/*.ts"
    ]
  }
}
